{
    "name": "deluxetech/laravel-repository",
    "type": "library",
    "description": "Repository design pattern implementation for Laravel framework.",
    "keywords": [
        "repository",
        "laravel",
        "data"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Tigran Koshetsyan",
            "email": "koshetsyan.tigran@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^8.0",
        "reedware/laravel-relation-joins": "^2.4"
    },
    "require-dev": {
        "orchestra/testbench": "^6",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "3.*"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelRepository\\ServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "LaravelRepository\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelRepository\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ],
        "psr-12-check": [
            "phpcs --standard=PSR12 src"
        ]
    }
}
